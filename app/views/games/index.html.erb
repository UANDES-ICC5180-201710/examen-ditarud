<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.description %></td>
        <td><%= game.image_url %></td>
        <td><%= link_to 'Show', game %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_game_path(game) , style: "#{'display:none' if current_user.is_staff == false}" %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } , style: "#{'display:none' if current_user.is_staff == false}"  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<li>
<%= link_to 'New Game', new_game_path %>
</li>
<% end %>
